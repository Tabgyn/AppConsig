<!DOCTYPE html>
<html>
<head lang="pt-br">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@ViewBag.Description" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <title>@ViewBag.Title - AppConsig</title>
    <!--Basic Styles-->
    @Styles.Render("~/css/bootstrap")
    
    <!--Fonts-->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300"
          rel="stylesheet" type="text/css">

    <!--Beyond styles-->
    @Styles.Render("~/css/beyond")
    <link href="~/Content/skins/black.css" rel="stylesheet" type="text/css" />

    <!--AppConsig styles-->
    @Styles.Render("~/css/appconsig")

    <!--Skin Script: Place this script in head to load scripts for skins-->
    @Scripts.Render("~/bundles/skin")

    <!--Weather styles-->
    @Styles.Render("~/css/weather")

    @RenderSection("PageStyles", required: false)
</head>
<body>
    <!-- Loading Container -->
    @*<div class="loading-container">
        <div class="loader"></div>
    </div>*@
    <!--  /Loading Container -->
    <!-- Navbar -->
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="navbar-container">
                <!-- Navbar Barnd -->
                <div class="navbar-header pull-left">
                    <a href="@Url.Action("Index", "VisaoGeral")" class="navbar-brand">
                        <i class="fa fa-at"></i>ppconsig<small class="themesecondary">Gestor</small>
                    </a>
                </div>
                <!-- /Navbar Barnd -->
                <!-- Sidebar Collapse -->
                <div class="sidebar-collapse" id="sidebar-collapse" title="Menu compacto">
                    <i class="collapse-icon fa fa-bars"></i>
                </div>
                <!-- /Sidebar Collapse -->
                <!-- Account Area and Settings --->
                <div class="navbar-header pull-right">
                    <div class="navbar-account">
                        <ul class="account-area">
                            <li>
                                <a class=" dropdown-toggle" data-toggle="dropdown" title="Informação" href="#">
                                    <i class="icon fa fa-info-circle"></i>
                                </a>
                                <!--Notification Dropdown-->
                                <ul class="pull-right dropdown-menu dropdown-arrow dropdown-notifications">
                                    <li>
                                        <a href="#">
                                            <div class="clearfix">
                                                <div class="notification-icon">
                                                    <i class="fa fa-book bg-themethirdcolor white"></i>
                                                </div>
                                                <div class="notification-body">
                                                    <span class="title">Manual</span>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <div class="clearfix">
                                                <div class="notification-icon">
                                                    <i class="fa fa-comment bg-themethirdcolor white"></i>
                                                </div>
                                                <div class="notification-body">
                                                    <span class="title">Suporte</span>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <li class="dropdown-footer">
                                        <span>
                                            @CurrentDay.ToUpperInvariant(), @CurrentDate
                                        </span>
                                        <span id="weather" class="weather pull-right"></span>
                                    </li>
                                </ul>
                                <!--/Notification Dropdown-->
                            </li>
                            <li>
                                <a class="login-area dropdown-toggle" data-toggle="dropdown">
                                    <div class="avatar" title="Veja seu perfil">
                                        <img src="@Avatar">
                                    </div>
                                    <section>
                                        <h2><span class="profile"><span>@User.Nome</span></span></h2>
                                    </section>
                                </a>
                                <!--Login Area Dropdown-->
                                <ul class="pull-right dropdown-menu dropdown-arrow dropdown-login-area">
                                    <li class="username"><a>@User.Identity.Name</a></li>
                                    <li class="email"><a>@User.Email</a></li>
                                    <!--Avatar Area-->
                                    <li>
                                        <div class="avatar-area">
                                            <img src="@Avatar" class="avatar">
                                        </div>
                                    </li>
                                    <!--Avatar Area-->
                                    <li class="edit">
                                        <a href="@Url.Action("Conta","Usuario")" class="pull-left">Minha conta</a>
                                    </li>
                                    <!--Theme Selector Area-->
                                    <li class="theme-area">
                                        <ul class="colorpicker" id="skin-changer">
                                            <li><a class="colorpick-btn" href="#" style="background-color: #5DB2FF;" rel="~/Content/skins/blue.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #2dc3e8;" rel="~/Content/skins/azure.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #03B3B2;" rel="~/Content/skins/teal.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #53a93f;" rel="~/Content/skins/green.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #FF8F32;" rel="~/Content/skins/orange.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #cc324b;" rel="~/Content/skins/pink.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #AC193D;" rel="~/Content/skins/darkred.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #8C0095;" rel="~/Content/skins/purple.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #0072C6;" rel="~/Content/skins/darkblue.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #585858;" rel="~/Content/skins/gray.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #474544;" rel="~/Content/skins/black.css"></a></li>
                                            <li><a class="colorpick-btn" href="#" style="background-color: #001940;" rel="~/Content/skins/deepblue.css"></a></li>
                                        </ul>
                                    </li>
                                    <!--/Theme Selector Area-->
                                    <li class="dropdown-footer">
                                        <a href="@Url.Action("Sair", "Acesso")">
                                            Sair
                                        </a>
                                    </li>
                                </ul>
                                <!--/Login Area Dropdown-->
                            </li>
                            <!-- /Account Area -->
                            <!--Note: notice that setting div must start right after account area list.
                            no space must be between these elements-->
                            <!-- Settings -->
                        </ul>
                        @*<div class="setting">
                            <a id="btn-setting" title="Setting" href="#">
                                <i class="icon glyphicon glyphicon-cog"></i>
                            </a>
                        </div>
                        <div class="setting-container">
                            <label>
                                <input type="checkbox" id="checkbox_fixednavbar">
                                <span class="text">Fixed Navbar</span>
                            </label>
                            <label>
                                <input type="checkbox" id="checkbox_fixedsidebar">
                                <span class="text">Fixed SideBar</span>
                            </label>
                            <label>
                                <input type="checkbox" id="checkbox_fixedbreadcrumbs">
                                <span class="text">Fixed BreadCrumbs</span>
                            </label>
                            <label>
                                <input type="checkbox" id="checkbox_fixedheader">
                                <span class="text">Fixed Header</span>
                            </label>
                        </div>*@
                        <!-- Settings -->
                    </div>
                </div>
                <!-- /Account Area and Settings -->
            </div>
        </div>
    </div>
    <!-- /Navbar -->
    <!-- Main Container -->
    <div class="main-container container-fluid">
        <!-- Page Container -->
        <div class="page-container">
            <!-- Page Sidebar -->
            <div class="page-sidebar sidebar-fixed" id="sidebar">
                <!-- Page Sidebar Header-->
                @*<div class="sidebar-header-wrapper">
                        <input type="text" class="searchinput" />
                        <i class="searchicon fa fa-search"></i>
                        <div class="searchhelper">Search Reports, Charts, Emails or Notifications</div>
                    </div>*@
                <!-- /Page Sidebar Header -->
                <!-- Sidebar Menu -->
                @Html.MvcSiteMap().Menu(false)
                <!-- /Sidebar Menu -->
                <!-- Sidebar Collapse -->
                @*<div class="sidebar-collapse sidebar-toggler" id="sidebar-collapse" title="Menu compacto">
                    <i class="collapse-icon fa fa-angle-double-left"></i>
                </div>*@
                <!-- /Sidebar Collapse -->
            </div>
            <!-- /Page Sidebar -->
            <!-- Page Content -->
            <div class="page-content">
                <!-- Loading Container -->
                <div class="loading-container">
                    <div class="loader"></div>
                </div>
                <!--  /Loading Container -->
                <!-- Page Breadcrumb -->
                <div class="page-breadcrumbs breadcrumbs-fixed">
                    <div class="page-breadcrumb-bordered  bg-themeprimary"></div>
                    @Html.MvcSiteMap().SiteMapPath()
                </div>
                <!-- /Page Breadcrumb -->
                <!-- Page Header -->
                <div class="page-header position-relative page-header-fixed">
                    @Html.MvcSiteMap().SiteMapTitle()
                    <!--Header Buttons-->
                    <div class="header-buttons">
                        <a class="sidebar-toggler" href="#" title="Remover menu">
                            <i class="fa fa-arrows-h"></i>
                        </a>
                        <a class="refresh" id="refresh-toggler" href="" title="Atualizar">
                            <i class="glyphicon glyphicon-refresh"></i>
                        </a>
                        <a class="fullscreen" id="fullscreen-toggler" href="#" title="Maximizar">
                            <i class="glyphicon glyphicon-fullscreen"></i>
                        </a>
                    </div>
                    <!--Header Buttons End-->
                </div>
                <!-- /Page Header -->
                <!-- Page Body -->
                <div class="page-body">
                    <!-- Your Content Goes Here -->
                    @RenderBody()
                </div>
                <!-- /Page Body -->
            </div>
            <!-- /Page Content -->
        </div>
        <!-- /Page Container -->
        <!-- Main Container -->
    </div>

    <!--Basic Scripts-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!--Beyond Scripts-->
    @Scripts.Render("~/bundles/beyond")

    <!--Weather Scripts-->
    @Scripts.Render("~/bundles/weather")
    @Scripts.Render("~/bundles/appconsig")
    <script type="text/javascript">
        
    </script>
    <!--Page Related Scripts-->
    @RenderSection("PageScripts", required: false)
</body>
</html>
