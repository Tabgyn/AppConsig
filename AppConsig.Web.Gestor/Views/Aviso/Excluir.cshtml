@model AppConsig.Entidades.Aviso
@{
    ViewBag.Title = Html.MvcSiteMap().SiteMap.CurrentNode.Title;
    ViewBag.Description = Html.MvcSiteMap().SiteMap.CurrentNode.Description;
}

<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-body">
                @using (Html.BeginForm("Excluir", "Aviso", new { id = @Model.Id }, FormMethod.Post))
                {
                    <p>Deseja realmente excluir?</p>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Texto, new { @class = "control-label" })
                        @Html.TextAreaFor(m => m.Texto, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group">
                        <button class="btn" type="submit">Excluir</button>
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-link" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>