@using AppConsig.Web.Base.Helpers
@model ConsignatariaEditModel
@{
    ViewBag.Title = Html.MvcSiteMap().SiteMap.CurrentNode.Title;
    ViewBag.Description = Html.MvcSiteMap().SiteMap.CurrentNode.Description;
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="widget">
            <div class="widget-body">
                @{ Html.RenderPartial("_Alerta"); }
                @using (Html.BeginForm("Excluir", "Consignataria", new { id = @Model.Id }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nome, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Sigla, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Sigla, new { @class = "form-control w-1", disabled = "disabled" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Codigo, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control w-1", disabled = "disabled" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.CNPJ, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.CNPJ, new { @class = "form-control w-2", disabled = "disabled" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", disabled = "disabled" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.TipoRepresentante, new { @class = "control-label" })
                        @Html.CustomEnumDropDownListFor(m => m.TipoRepresentante, "Escolha uma opção...", new { @class = "form-control w-2", disabled = "disabled" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Excluir</button>
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-link" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>