@using AppConsig.Web.Base.Helpers
@model AppConsig.Entities.Servico
@{
    ViewBag.Title = Html.MvcSiteMap().SiteMap.CurrentNode.Title;
    ViewBag.Description = Html.MvcSiteMap().SiteMap.CurrentNode.Description;
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="widget">
            <div class="widget-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Nome, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", disabled = "disabled" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Descricao, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control", disabled = "disabled" })
                    @Html.ValidationMessageFor(m => m.Descricao, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Ordem, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Ordem, new { @class = "form-control w-1", disabled = "disabled" })
                    @Html.ValidationMessageFor(m => m.Ordem, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TipoServicoInerente, new { @class = "control-label" })
                    @Html.CustomEnumDropDownListFor(m => m.TipoServicoInerente, "Escolha uma opção...",
                        new { @class = "form-control w-2", disabled = "disabled" })
                    @Html.ValidationMessageFor(m => m.TipoServicoInerente, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TipoServicoRelacao, new { @class = "control-label" })
                    @Html.CustomEnumDropDownListFor(m => m.TipoServicoRelacao, "Escolha uma opção...",
                        new { @class = "form-control w-2", disabled = "disabled" })
                    @Html.ValidationMessageFor(m => m.TipoServicoRelacao, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.ActionLink("Editar", "Editar", new { id = @Model.Id }, new { @class = "btn btn-link" })
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-link" })
                </div>
            </div>
        </div>
    </div>
</div>