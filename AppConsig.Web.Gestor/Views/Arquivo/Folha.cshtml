
@{
    ViewBag.Title = "Folha";
}

<div class="progress progress-sm">
    <div class="progress-bar progress-bar-azure" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0">
        <span class="sr-only">
        </span>
    </div>
</div>

@section PageScripts
{
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script>
        $(function () {
            var progress = $.connection.taskHub;

            // Create a function that the hub can call back
            progress.client.progressChanged = function(task) {
                $('.progress-bar').style = "width: " + task.percent + "%";
            };

            // Start the connection.
            $.connection.hub.start().done(function() {
                // Call the ReportProgress method on the hub. 
                progress.server.reportProgress();
            });
        });
    </script>
}
