@model ServidorEditModel
@{
    ViewBag.Title = Html.MvcSiteMap().SiteMap.CurrentNode.Title;
    ViewBag.Description = Html.MvcSiteMap().SiteMap.CurrentNode.Description;
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="widget">
            <div class="widget-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Nome, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.Nome, new {@class = "form-control", disabled = "disabled"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CPF, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.CPF, new {@class = "form-control w-2", disabled = "disabled"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Matricula, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.Matricula, new {@class = "form-control w-2", disabled = "disabled"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Departamento, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.Departamento, new {@class = "form-control", disabled = "disabled"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NascidoEm, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.NascidoEm, new {@class = "form-control w-2", disabled = "disabled"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AdmitidoEm, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.AdmitidoEm, new {@class = "form-control w-2", disabled = "disabled"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AfastadoEm, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.AfastadoEm, new { @class = "form-control w-2", disabled = "disabled" })
                </div>
                <div class="form-group">
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-link" })
                </div>
            </div>
        </div>
    </div>
</div>