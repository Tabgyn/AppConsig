
@{
    ViewBag.Title = Html.MvcSiteMap().SiteMap.CurrentNode.Title;
    ViewBag.Description = Html.MvcSiteMap().SiteMap.CurrentNode.Description;
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="widget">
            <div class="widget-header">
                <i class="widget-icon fa fa-hourglass"></i>
                <span class="widget-caption">Filtros</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="widget">
            <div class="widget-header ">
                <i class="widget-icon fa fa-bar-chart"></i>
                <span class="widget-caption">Relatório</span>
                <div class="widget-buttons">
                    <a href="#" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                @{ Html.RenderPartial("_Alerta"); }
                <div class="DTTT btn-group">
                    <a class="btn btn-default DTTT_button_print" id="ToolTables_editabledatatable_1" title="View print view" tabindex="0" aria-controls="editabledatatable">
                        <span>Imprimir</span>
                    </a>
                    <a class="btn btn-default DTTT_button_collection" id="ToolTables_editabledatatable_2" tabindex="0" aria-controls="editabledatatable">
                        <span>Salvar<i class="fa fa-angle-down"></i></span>
                    </a>
                </div>
                <div class="table-scrollable">
                    <table class="table table-responsive table-striped table-hover table-bordered table-condensed">
                        <thead>
                        <tr>
                            <th class="col-md-5 col-lg-5">Nome</th>
                            <th class="col-md-3 col-lg-2">Valor</th>
                            <th class="hidden-md col-lg-2">Situação</th>
                            <th class="col-md-4 col-lg-3"></th>
                        </tr>
                        </thead>

                        <tbody>
                        @*@foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="col-md-5 col-lg-5 text-overflow"></td>
                                        <td class="col-md-3 col-lg-2"></td>
                                        <td class="hidden-md col-lg-2"></td>
                                        <td class="col-md-4 col-lg-3 text-align-center"></td>
                                    </tr>
                                }*@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>